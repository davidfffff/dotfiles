* {
  font:   "Mononoki Nerd Font 13";

  bg0     : #282a2e;
  bg1     : #1d1f21;
  bg2     : #24283b;
  bg3     : #4d5057;
  fg0     : #c5c8c6;
  fg1     : #b294bb;
  fg2     : #373b41;
  red     : #cc6666;
  green   : #b5bd68;
  yellow  : #e0af68;
  blue    : #81a2be;
  magenta : #9a7ecc;
  magenta2 : #bb9af7;
  cyan    : #4abaaf;

  accent: @fg1;
  urgent: @red;

  background-color : transparent;
  text-color       : @fg0;

  margin  : 0;
  padding : 0;
  spacing : 0;
}

element-icon, element-text, scrollbar {
  cursor: pointer;
}

window {
  location : center;
  width    : 375px;
  x-offset : 10px;
  y-offset : 40px;

  background-color: @bg1;
  border: 0px;
  border-color: @bg3;
  border-radius: 0px;
}

inputbar {
  spacing  : 8px;
  padding  : 8px 8px;
  children : [ entry ];

  background-color: @bg0;
}

icon-search, entry, element-icon, element-text {
  vertical-align: 0.5;
  /*placeholder : "search";*/
  text-color : @fg0; 
}

icon-search {
  expand   : false;
  filename : "search-symbolic";
  size     : 14px;
}


textbox {
  padding          : 4px 8px;
  background-color : @bg2;
}

prompt {
  text-color : @fg0;
}

listview {
  padding      : 4px 0px;
  lines        : 8;
  columns      : 1;
  scrollbar    : true;
  fixed-height : true;
  dynamic      : true;
}

element {
  padding : 4px 8px;
  spacing : 8px;
}

element normal urgent {
  text-color: @urgent;
}

element normal active {
  text-color: @accent;
}

element selected {
  text-color       : @bg1;
  background-color : @accent;
}

element selected urgent {
  background-color: @urgent;
}

element-icon {
  size: 0.8em;
}

element-text {
  text-color: inherit;
}

scrollbar {
  handle-width : 4px;
  handle-color : @fg2;
  padding      : 0 4px;
}

